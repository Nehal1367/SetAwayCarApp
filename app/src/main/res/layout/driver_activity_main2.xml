<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#60ffffff"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and Time"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="#000" />


                <EditText
                    android:id="@+id/edit_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="22-01-2018 12:56am"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:backgroundTint="#f3f3f3"
                    android:background="@drawable/rounded_edittext"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_starting_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Km"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_starting_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0km"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:backgroundTint="#f3f3f3"
                    android:inputType="number"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_edittext"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_ending_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ending Km"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_ending_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0km"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:backgroundTint="#f3f3f3"
                    android:inputType="number"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_edittext"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_total_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Km"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <EditText
        android:id="@+id/edit_total_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0km"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:backgroundTint="#f3f3f3"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_edittext"/>


</LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp">

           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_signature"
                android:text="Signature"
                android:textSize="20dp"
                android:textColor="#000"/>-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Signature"
                android:background="#000"
                android:textColor="#fff"
                android:padding="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="#199ccB"
                android:textColor="#fff"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
</ScrollView>